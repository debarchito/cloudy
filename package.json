{
  "name": "cloudy",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "shadcn:add": "pnpm dlx shadcn-svelte@latest add",
    "db:generate": "pnpm drizzle-kit generate:sqlite --config=drizzle.config.ts",
    "db:push": "pnpm drizzle-kit push:sqlite --config=drizzle.config.ts",
    "db:createUser": "cd scripts && node --no-warnings createUser.js"
  },
  "dependencies": {
    "@libsql/client": "^0.5.0",
    "drizzle-orm": "^0.29.3",
    "oslo": "^1.1.2"
  },
  "devDependencies": {
    "@inquirer/prompts": "^4.0.0",
    "@lucia-auth/adapter-drizzle": "^1.0.2",
    "@playwright/test": "^1.41.2",
    "@sveltejs/adapter-node": "^4.0.1",
    "@sveltejs/kit": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@types/eslint": "8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.17",
    "bits-ui": "^0.18.1",
    "clsx": "^2.1.0",
    "dotenv": "^16.4.4",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "2.36.0-next.5",
    "lucia": "^3.0.1",
    "lucide-svelte": "^0.331.0",
    "postcss": "^8.4.35",
    "postcss-load-config": "^5.0.3",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "svelte": "^4.2.11",
    "svelte-check": "^3.6.4",
    "tailwind-merge": "^2.2.1",
    "tailwind-variants": "^0.2.0",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vitest": "^1.3.0"
  }
}
